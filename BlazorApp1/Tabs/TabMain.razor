            </TabItem>
            <TabItem>
                <ChildContent>
                    <TabHeader Text="Ventas Por Bodega"></TabHeader>
                </ChildContent>
                <ContentTemplate>
                    <VentasPorProducto></VentasPorProducto>
                </ContentTemplate>
            </TabItem>
            <TabItem>
                <ChildContent>
                    <TabHeader Text="Ventas Por Cliente"></TabHeader>
                </ChildContent>
                <ContentTemplate>
                    <VentasPorProducto></VentasPorProducto>
                </ContentTemplate>
            </TabItem>
        </TabItems>
    </SfTab>
</CascadingValue>

